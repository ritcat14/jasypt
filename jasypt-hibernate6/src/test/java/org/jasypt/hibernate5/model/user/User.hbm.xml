<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
"http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">
<hibernate-mapping>
    <typedef name="encryptedString" class="org.jasypt.hibernate5.type.EncryptedStringType">
      <param name="encryptorRegisteredName">hibernateStringEncryptor</param>
    </typedef>
    <typedef name="encryptedCalendarAsString" class="org.jasypt.hibernate5.type.EncryptedCalendarAsStringType">
      <param name="encryptorRegisteredName">hibernateStringEncryptor</param>
    </typedef>
    <typedef name="encryptedBinary" class="org.jasypt.hibernate5.type.EncryptedBinaryType">
      <param name="encryptorRegisteredName">hibernateByteEncryptor</param>
    </typedef>
    <typedef name="encryptedBigInteger" class="org.jasypt.hibernate5.type.EncryptedBigIntegerType">
      <param name="encryptorRegisteredName">hibernateBigIntegerEncryptor</param>
    </typedef>
    <typedef name="encryptedBigDecimal" class="org.jasypt.hibernate5.type.EncryptedBigDecimalType">
      <param name="encryptorRegisteredName">hibernateBigDecimalEncryptor</param>
      <param name="decimalScale">2</param>
    </typedef>
    
    <class name="org.jasypt.hibernate5.model.user.User" table="USER">
        <id name="login" type="java.lang.String">
            <column name="LOGIN" />
            <generator class="assigned" />
        </id>
        <property name="name" type="java.lang.String">
            <column name="NAME" />
        </property>
        <property name="password" type="encryptedString">
            <column name="PASSWORD" />
        </property>
        <property name="birthdate" type="encryptedCalendarAsString">
            <column name="BIRTHDATE" />
        </property>
        <property name="document" type="encryptedBinary">
            <column name="DOCUMENT" />
        </property>
        <property name="code" type="encryptedBigInteger">
            <column name="CODE" />
        </property>
        <property name="code2" type="encryptedBigDecimal">
            <column name="CODE2" />
        </property>
    </class>
</hibernate-mapping>
